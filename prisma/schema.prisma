generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())  //This is the id that automatically created 
  username String @unique 
  imageUrl String @db.Text
  externalUserId String @unique //We store that id which clerk uses as id for user
  bio String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}